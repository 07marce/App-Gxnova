<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Botón Volver -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volver"
                android:layout_marginStart="6dp"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar Trabajo"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 proyectos disponibles"
            android:textColor="#7A7A7A"/>

        <!-- Barra de búsqueda -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:hint="Buscar por título, habilidades..."
            android:background="@drawable/bg_edittext"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>
        <Spinner
            android:textColor="@color/spinner_text"
            android:entries="@array/categorias"
            android:id="@+id/spCategoria"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext"/>

        <!-- Tarjeta de trabajo -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Etiquetas -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Desarrollo Móvil"
                        android:textSize="12sp"
                        android:background="@drawable/tag_gray"
                        android:padding="6dp"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alta"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:background="@drawable/tag_yellow"
                        android:padding="6dp"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remoto"
                        android:textSize="12sp"
                        android:background="@drawable/tag_gray"
                        android:padding="6dp"/>
                </LinearLayout>

                <!-- Título -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desarrollo de Aplicación Móvil E-commerce"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>

                <!-- Info -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TechStore Colombia • Bogotá, Colombia • Hace 2 horas"
                    android:textColor="#7A7A7A"
                    android:layout_marginTop="4dp"/>

                <!-- Descripción -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Necesitamos desarrollar una aplicación móvil de e-commerce con pasarela de pagos integrada."
                    android:textColor="#555555"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:text="Habilidades Requeridas"/>

                <!-- Habilidades -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="React Native"
                        android:background="@drawable/tag_gray"
                        android:padding="5dp"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Node.js"
                        android:background="@drawable/tag_gray"
                        android:padding="5dp"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Firebase"
                        android:background="@drawable/tag_gray"
                        android:padding="5dp"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pasarelas de pago"
                        android:background="@drawable/tag_gray"
                        android:padding="5dp"/>
                </LinearLayout>

                <!-- Salario -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="$8.000.000 - $12.000.000"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"/>

                <!-- Botón -->
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Enviar Propuesta"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#000000"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Etiquetas -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Desarrollo Web"
                        android:textSize="12sp"
                        android:background="@drawable/tag_yellow"
                        android:padding="6dp"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alta"

                        android:textSize="12sp"
                        android:background="@drawable/tag_gray"
                        android:padding="6dp"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remoto"
                        android:textSize="12sp"
                        android:background="@drawable/tag_gray"
                        android:padding="6dp"/>
                </LinearLayout>

                <!-- Título -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desarrollo de Sistema De Gestion Para Hotel"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>

                <!-- Info -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hotel Coloinal • Popayán, Colombia • Hace 1 minuto"
                    android:textColor="#7A7A7A"
                    android:layout_marginTop="4dp"/>

                <!-- Descripción -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Necesitamos desarrollar un sistema de gestion hotelera con módulos de reservas, check-in/check.out y facturacion."
                    android:textColor="#555555"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:text="Habilidades Requeridas"/>

                <!-- Habilidades -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Php"
                        android:background="@drawable/tag_gray"
                        android:padding="5dp"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MySQL"
                        android:background="@drawable/tag_gray"
                        android:padding="5dp"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JavaScript"
                        android:background="@drawable/tag_gray"
                        android:padding="5dp"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Css/Html"
                        android:background="@drawable/tag_gray"
                        android:padding="5dp"/>
                </LinearLayout>

                <!-- Salario -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="$4.000.000 - $10.000.000"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"/>

                <!-- Botón -->
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Enviar Propuesta"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#000000"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
